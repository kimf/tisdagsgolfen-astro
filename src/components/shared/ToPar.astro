---
interface Props {
  toPar: number;
  color?: string;
}
const { toPar, color } = Astro.props;
const textColor = color || '$text';
const toParColor = toPar === 0 ? textColor : toPar > 0 ? textColor : 'red';
---

<span style={{ color: toParColor }}>
  {toPar === 0 ? 'E' : toPar > 0 ? `+${toPar}` : toPar}
</span>
