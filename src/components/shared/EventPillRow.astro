---
import Pill from './Pill.astro';

interface Props {
  live?: boolean;
  special: boolean;
  teamEvent: boolean;
  strokes: boolean;
}
const { live, special, teamEvent, strokes } = Astro.props;
---

<div class="flex gap-0.5 mb-2">
  {
    special && (
      <Fragment>
        <Pill variant="special">SPECIAL</Pill>
        {teamEvent && <Pill variant="teamEvent">LAG</Pill>}
      </Fragment>
    )
  }
  <Pill>{strokes ? 'SLAG' : 'POÃ„NG'}</Pill>
  {live && <Pill variant="live">LIVE</Pill>}
</div>
