---
import { calculateExtraStrokes } from 'src/lib/calculateExtraStrokes';

interface Props {
  holeIndex: number;
  givenStrokes: number;
  holesCount: number;
  horizontal?: boolean;
}

const { holeIndex, givenStrokes, holesCount, horizontal = false } = Astro.props;

const length = calculateExtraStrokes(holeIndex, givenStrokes, holesCount);
const dots = Array.from({ length }, (_, i) => i + 1);

const className = horizontal
  ? 'flex flex-row justify-end items-center gap-1'
  : 'flex flex-col justify-end items-center gap-1';
---

<div class={className}>
  {dots.map((dot) => <span class="text-gray-900 vcr">â€¢</span>)}
</div>
