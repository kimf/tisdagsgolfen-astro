---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import SharedHead from 'src/components/layouts/SharedHead.astro';
import ThemeToggle from 'src/components/ui/theme-toggle.astro';
import 'src/styles/global.css';
---

<!doctype html>
<html lang="sv">
  <SharedHead title={title} />
  <body id="main" class="antialiased dark:bg-gray-900 h-screen">
    <slot />

    <ThemeToggle />
  </body>
</html>
