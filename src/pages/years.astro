---

<AppScreen title="Historik">
  <main class="p-4 pb-12">
    <div class="-ml-4 mb-2">
      <Button intent="link">
        <a href="/"> &larr; TILLBAKA </a>
      </Button>
    </div>

    <h1 class="text-2xl font-bold">HISTORIK</h1>

    {
      historyItems.map((item) => (
        <div>
          <StickyHeader title={`${item.year} - ${item.winner}`} />

          {item.description && (
            <p class="mb-2 text-base font-normal text-gray-500 dark:text-gray-400">
              {item.description}
            </p>
          )}
          {item.image && (
            <img
              class="object-cover w-full min-h-36 max-h-72 mt-4 border-4 border-gray-200"
              src={item.image}
            />
          )}

          <a href={`/${item.year}`} class="inline-flex gap-2 py-2 text-sm" target="_blank">
            Ledartavla och rundor <Link class="size-5" />
          </a>
        </div>
      ))
    }
  </main>
</AppScreen>
