    image: '/images/winnerphotos/2024-tobbe.jpg'
  },
  {
    year: '2023',
    winner: 'Khalex',
    description: 'Nyköping. Var han fortfarande på väg ner i hcp? :D'
  },
  {
    year: '2022',
    winner: 'Khalex',
    description: '10 år! Lanna Lodge. Khalex var på väg ner i hcp :)',
    image: '/images/winnerphotos/2022-khalex.jpg'
  },
  {
    year: '2021',
    winner: 'Patrik',
    description:
      'Packe totaldominerade. Täby Gk (kallt satan) + Sala GK med den intressanta restaurangen'
  },
  {
    year: '2020',
    winner: 'Tobias',
    description: 'Åda + Finspång',
    image: '/images/winnerphotos/2020-tobbe.jpg'
  },
  {
    year: '2019',
    winner: 'Niklas',
    description: 'Åda + Nyköping. Straffgolf och mycket whiskey',
    image: '/images/winnerphotos/2019-niklas.jpg'
  },
  {
    year: '2018',
    winner: 'Tobbe',
    description: 'Ombergs, och delad seger troddes det ett tag',
    image: '/images/winnerphotos/2018-tobbe.jpg'
  },
  {
    year: '2017',
    winner: 'Tobias',
    description: '5-års jubileum och final i Spanien!',
    image: '/images/winnerphotos/2017-tobbe.jpg'
  },
  {
    year: '2016',
    winner: 'Niklas',
    description: 'Lindö?',
    image: '/images/winnerphotos/2016-niklas.jpg'
